<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?android:attr/actionBarSize"
    tools:context=".ui.dashboard.DashboardFragment"
    android:paddingBottom="85dp"
    android:orientation="vertical">

    <GridLayout
        android:id="@+id/base_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:columnCount="21"
        android:rowCount="21"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <GridLayout
                android:id="@+id/drawerForArena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:columnCount="2"
                android:rowCount="1"
                android:background="@drawable/message"
                android:layout_margin="15dp"/>


        </LinearLayout>

        <TextView
            android:id="@+id/robotStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Robot Status: X = nil Y = nil Facing = nil"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/forwardLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Aero"
                    android:padding="8dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/baseline_turn_slight_left_24"/>

                <ImageButton
                    android:id="@+id/forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Aero"
                    android:padding="8dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/baseline_arrow_upward_24" />

                <ImageButton
                    android:id="@+id/forwardRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Aero"
                    android:padding="8dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/baseline_turn_slight_right_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/leftBackward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Aero"
                    android:padding="8dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/baseline_turn_slight_right_24"
                    android:rotation="180"/>

                <ImageButton
                    android:id="@+id/backward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Aero"
                    android:padding="8dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/baseline_arrow_downward_24"/>

                <ImageButton
                    android:id="@+id/rightBackward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Aero"
                    android:padding="8dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/baseline_turn_slight_left_24"
                    android:rotation="180"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Mode:"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton android:id="@+id/radio_imageRec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Image Recognition"
                        android:layout_gravity="center_vertical"/>

                    <RadioButton android:id="@+id/radio_fastestCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fastest Car"
                        android:layout_gravity="center_vertical"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send"
                    android:textColor="#000000"
                    android:id="@+id/sendToCar"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/baseline_upload_24"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:textColor="#000000"
                    android:id="@+id/resetArena"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/baseline_replay_24"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:textColor="#000000"
                    android:id="@+id/start"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/baseline_play_arrow_24"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>







</LinearLayout>